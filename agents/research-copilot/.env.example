# LLM Release Radar Agent Environment Variables

# LLM Configuration
OLLAMA_HOST=localhost:11434
OLLAMA_MODEL=qwen2:7b
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000

# Notion Configuration
NOTION_TOKEN=secret_your_notion_integration_token_here
NOTION_DATABASE_ID=your_notion_database_id_here
NOTION_PAGE_SIZE=100
NOTION_TIMEOUT=30

# Search API Configuration
SEARCH_API_KEY=your_search_api_key_here
SEARCH_ENGINE=serpapi
SEARCH_RESULTS_LIMIT=20
SEARCH_TIMEOUT=30

# Web Scraping Configuration
USER_AGENT=LLMReleaseRadar/1.0 (+https://github.com/your-username/agents)
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=5
RATE_LIMIT_DELAY=1.0
SCRAPING_MAX_RETRIES=3

# Monitoring and Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
METRICS_PORT=8080
HEALTH_CHECK_PORT=8081

# Kubernetes Configuration
K8S_NAMESPACE=agents
K8S_SERVICE_ACCOUNT=llm-release-radar

# Development Configuration
ENVIRONMENT=development
DEBUG=false
TESTING=false

# Caching Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Sources Configuration
ENABLE_GITHUB_MONITORING=true
ENABLE_GOOGLE_MONITORING=true
ENABLE_MICROSOFT_MONITORING=true
ENABLE_OPENAI_MONITORING=true
ENABLE_ANTHROPIC_MONITORING=true
ENABLE_HUGGINGFACE_MONITORING=true

# Scheduling Configuration
CRON_SCHEDULE="0 9 * * 1"
TIMEZONE=UTC

# Error Handling Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2.0
CIRCUIT_BREAKER_THRESHOLD=5
